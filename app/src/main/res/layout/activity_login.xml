<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/square"
        android:background="@drawable/square"
        android:textSize="150dp"/>

    <EditText
        android:id="@+id/et_lusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6F4F4"
        android:layout_marginStart="150dp"
        android:padding="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:ems="10"
        android:inputType="text"
        android:textColorHint="#AEACAC"
        android:textSize="16dp"
        android:layout_below="@+id/square"
        android:hint="Username" />

    <EditText
        android:id="@+id/et_lpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_lusername"
        android:layout_centerHorizontal="true"
        android:background="#F6F4F4"
        android:layout_marginTop="15dp"
        android:layout_marginStart="150dp"
        android:padding="15dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColorHint="#AEACAC"
        android:textSize="16dp"
        android:hint="Password" />

    <Button
        android:id="@+id/btn_llogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_lpassword"
        android:layout_centerHorizontal="true"
        android:background="@drawable/square"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:text="Login"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dont Have Account?"
        android:textSize="11dp"
        android:textStyle="bold"
        android:layout_marginStart="250dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn_lregister"/>

    <Button
        android:id="@+id/btn_lregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/square"
        android:ems="10"
        android:layout_marginStart="100dp"
        android:text="Register"/>

</RelativeLayout>